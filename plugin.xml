<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            id="com.thoughtworks.gipse.contribution1">
         <menu
               label="Gipse"
               path="additions"
               id="com.thoughtworks.gipse.menu">
            <separator
                  name="fileGroup">
            </separator>
         </menu>
         <action
               label="Add to Index"
               class="com.thoughtworks.gipse.popup.actions.AddToIndexAction"
               menubarPath="com.thoughtworks.gipse.menu/fileGroup"
               id="com.thoughtworks.gipse.newAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.thoughtworks.gipse"
            name="Gipse">
      </category>
      <view
            category="com.thoughtworks.gipse"
            class="com.thoughtworks.gipse.views.GipseOutputView"
            icon="icons/sample.gif"
            id="com.thoughtworks.gipse.views.GipseOutputView"
            name="Gipse git output view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="com.thoughtworks.gipse.views.GipseOutputView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
